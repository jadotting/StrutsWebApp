<!-- standard strusts header -->
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default">
    	<!-- linking the action name to the class -->
        <action name="HelloWorld" class="testtest2.LoginAction">
        	<!-- if execute() in the class on top returns a SUCCESS or FAILURE
        	string move to the next view -->
            <result name="SUCCESS">/success.jsp</result>
            <result name="FAILURE">/index.html</result>
        </action>
    </package>
</struts>
